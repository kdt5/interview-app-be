{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "app.ts"],
}
